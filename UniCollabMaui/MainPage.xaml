<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Background="Black"
             x:Class="UniCollabMaui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">


            <Image
                x:Name="Logo"
                Source="unicollab_logo.png"
                HeightRequest="400"
                Aspect="AspectFit"
                Opacity="0"
                 SemanticProperties.Description="unicollab logo" />

            <Button
                x:Name="StartBtn"
                Text="Start!" 
                FontAttributes="Bold"
                TextColor="Blue"
                Background ="Transparent"
                BorderColor="Blue"
                BorderWidth="2"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
