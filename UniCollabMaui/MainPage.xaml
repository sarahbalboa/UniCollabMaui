<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Background="White"
             
             x:Class="UniCollabMaui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">


            <Image
                x:Name="Logo"
                Source="unicollablogo1.png"
                HeightRequest="400"
                Aspect="AspectFit"
                Opacity="0"/>
            

            <Button
                x:Name="StartBtn"
                Text="Start!" 
                FontAttributes="Bold"
                TextColor="{StaticResource MyBlue2}"
                Background ="Transparent"
                BorderColor="{StaticResource MyBlue2}"
                BorderWidth="2"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnStartClicked"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
