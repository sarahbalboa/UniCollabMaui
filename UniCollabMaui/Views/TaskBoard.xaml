<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniCollabMaui.Views.TaskBoard">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Add Task" Clicked="OnAddTaskButtonClicked"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Column Headers -->
                <Label Text="ToDo" Grid.Row="0" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center" />
                <Label Text="In Progress" Grid.Row="0" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center" />
                <Label Text="Done" Grid.Row="0" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center" />

                <!-- Task Columns -->
                <StackLayout x:Name="ToDoColumn" Grid.Row="1" Grid.Column="0" Padding="10"></StackLayout>
                <StackLayout x:Name="InProgressColumn" Grid.Row="1" Grid.Column="1" Padding="10"></StackLayout>
                <StackLayout x:Name="DoneColumn" Grid.Row="1" Grid.Column="2" Padding="10"></StackLayout>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
