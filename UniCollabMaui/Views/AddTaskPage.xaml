<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniCollabMaui.Views.AddTaskPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Entry x:Name="TaskTitleEntry" Placeholder="Task Title" />
            <Editor x:Name="TaskDescriptionEditor" Placeholder="Task Description" />
            <Picker x:Name="TaskColumnPicker" Title="Select Column">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>ToDo</x:String>
                        <x:String>InProgress</x:String>
                        <x:String>Done</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button Text="Save Task" Clicked="OnSaveTaskButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
